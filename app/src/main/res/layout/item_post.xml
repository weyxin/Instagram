<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent" android:layout_height="wrap_content">

    <ImageView
        android:id="@+id/ivProfileImage"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="20dp"
        app:srcCompat="@android:color/black" />

    <TextView
        android:id="@+id/tvHandle"
        android:layout_width="wrap_content"
        android:layout_height="30dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginStart="104dp"
        android:layout_marginTop="29dp"
        android:textStyle="bold"
        android:text="TextView" />

    <TextView
        android:id="@+id/tvDescription"
        android:layout_width="154dp"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignTop="@+id/tvUsername"
        android:layout_marginStart="90dp"
        android:text="TextView" />

    <com.parse.ParseImageView
        android:id="@+id/ivPostImage"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/ivProfileImage"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="20dp"
        app:srcCompat="@android:color/darker_gray" />

    <TextView
        android:id="@+id/tvUsername"
        android:layout_width="50dp"
        android:layout_height="wrap_content"
        android:layout_alignStart="@+id/ivProfileImage"
        android:layout_below="@+id/heartButton"
        android:layout_marginTop="10dp"
        android:text="TextView"
        android:textStyle="bold" />

    <ImageButton
        android:id="@+id/heartButton"
        android:layout_width="35dp"
        android:layout_height="28dp"
        android:layout_marginLeft="20dp"
        android:layout_below="@+id/ivPostImage"
        android:layout_marginTop="10dp"
        android:background="@null"
        app:srcCompat="@drawable/ufi_heart" />

    <ImageButton
        android:id="@+id/commentButton"
        android:layout_width="35dp"
        android:layout_height="28dp"
        android:layout_alignBottom="@+id/heartButton"
        android:layout_alignParentStart="true"
        android:layout_marginStart="63dp"
        android:background="@null"
        app:srcCompat="@drawable/ufi_comment" />

    <ImageButton
        android:id="@+id/shareButton"
        android:layout_width="30dp"
        android:layout_height="28dp"
        android:layout_alignBottom="@+id/heartButton"
        android:layout_alignStart="@+id/tvHandle"
        android:background="@null"
        app:srcCompat="@drawable/ufi_new_direct" />

    <ImageButton
        android:id="@+id/imageButton"
        android:layout_width="wrap_content"
        android:layout_height="28dp"
        android:layout_alignParentEnd="true"
        android:layout_alignTop="@+id/heartButton"
        android:layout_marginEnd="20dp"
        android:background="@null"
        app:srcCompat="@drawable/bookmark" />

</RelativeLayout>